The history of the Kingdom of the Hill:

<ol>

  <% @reigns.each do |reign| %>
  <li>
    <% monarch = User.find(reign.user_id) %>
    <% if monarch.gender == 'male' %>
    King
    <% elsif monarch.gender == 'female' %>
    Queen
    <% else %>
    Monarch
    <% end %>
    <%= "#{monarch.first_name}: from #{reign.created_at.to_formatted_s(:long_ordinal)}"%>
    <% unless reign.finished == nil%>
      <%="until #{reign.finished.to_formatted_s(:long_ordinal)} (GMT) - #{humanize(reign.duration)}" %>
    <% end %>
  </li>
  <% end %>


</ol>
